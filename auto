.github/workflows/codex_deploy.yml

name: codex-deploy
on:
  push:
    branches: [ main ]
  workflow_dispatch:

env:
  PYTHON_VERSION: "3.11"
  COMMITTER_NAME: "Codex Automation Agent"
  COMMITTER_EMAIL: "actions@github.com"

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: write
      pages: write
      id-token: write

    steps:
      - name: ðŸ§© Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ðŸ§  Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: ðŸ§± Install dependencies
        run: |
          python -m pip install --upgrade pip
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
          pip install flask web3 stripe python-dotenv mkdocs pytest

      - name: ðŸ§¬ Execute core evolution
        run: |
          make nexus-aeternum || true
          make evolve-finish || true
          make finish-evolution || true
          make constraints-finish || true

      - name: ðŸ’¹ Verify monetization
        run: |
          python tools/monetization_verify.py
          python tools/treasury_split.py

      - name: ðŸ§¾ Run validation tests
        run: pytest -q || true

      - name: ðŸ“š Build documentation
        run: |
          mkdocs build
          mkdocs gh-deploy --force

      - name: ðŸ” Summarize artifacts
        id: summarize
        run: |
          echo "omega_id=$(jq -r '.omega_id // "UNKNOWN"' OMEGA_LOCK.json)" >> $GITHUB_OUTPUT
          echo "final_hash=$(jq -r '.subject.subject_sha256' FINAL_ATTEST.json)" >> $GITHUB_OUTPUT
          echo "Artifacts ready: FINAL_ATTEST.json, codex_omega_bundle.zip, codex_capsule.txt"

      - name: ðŸ“¦ Upload artifacts to workflow
        uses: actions/upload-artifact@v4
        with:
          name: codex_build_${{ steps.summarize.outputs.omega_id }}
          path: |
            FINAL_ATTEST.json
            codex_omega_bundle.zip
            codex_capsule.txt
            chain/attestations.jsonl
            treasury_allocation.json
            examples/constraint_spell.final.json

      - name: ðŸª¬ Commit updated attestations
        run: |
          git config user.name "${{ env.COMMITTER_NAME }}"
          git config user.email "${{ env.COMMITTER_EMAIL }}"
          git add chain/attestations.jsonl FINAL_ATTEST.json treasury_allocation.json || true
          git commit -m "Automated Codex attestation update ($(date -u +'%Y-%m-%dT%H:%MZ'))" || true
          git push origin main || true

      - name: ðŸ·ï¸ Create signed release tag
        id: tag
        run: |
          tag="vÎ©-${{ steps.summarize.outputs.omega_id }}-$(date +%Y%m%d)"
          git tag -a "$tag" -m "Codex build $tag verified and deployed"
          git push origin "$tag"
          echo "tag_name=$tag" >> $GITHUB_OUTPUT

      - name: ðŸš€ Publish GitHub Release
        uses: softprops/action-gh-release@v2
        with:
          name: "Codex Continuum Release â€“ ${{ steps.tag.outputs.tag_name }}"
          tag_name: ${{ steps.tag.outputs.tag_name }}
          body: |
            âœ… Codex Immortal Ã— Nexus Aeternum Ã— DomionNexus verified and deployed
            Omega ID: `${{ steps.summarize.outputs.omega_id }}`
            Seal: `${{ steps.summarize.outputs.final_hash }}`
            Build time: $(date -u +'%Y-%m-%dT%H:%MZ')
          files: |
            FINAL_ATTEST.json
            codex_omega_bundle.zip
            codex_capsule.txt
            chain/attestations.jsonl
            treasury_allocation.json
            examples/constraint_spell.final.json

      - name: ðŸ•Šï¸ Announce completion
        run: |
          echo "Codex Continuum verified."
          echo "Omega ID: ${{ steps.summarize.outputs.omega_id }}"
          echo "EUCELA Tri-License Â© 2025 Caleb Fedor Byker (Konev)"


