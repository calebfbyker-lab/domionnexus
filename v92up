ğŸ“œ src/api/app.py

from fastapi import FastAPI, Body
from fastapi.responses import JSONResponse
import json, time, hashlib, pathlib, os

ROOT = pathlib.Path("data"); ROOT.mkdir(exist_ok=True)
LEDGER = ROOT/"ledger.json"
if not LEDGER.exists(): LEDGER.write_text("[]")

app = FastAPI(title="Codex v92 â€” Monad Nexus")

def _read_ledger():
    try: return json.loads(LEDGER.read_text())
    except Exception: return []

def _write_ledger(items):
    LEDGER.write_text(json.dumps(items, indent=2))

@app.get("/")
def root():
    return {"codex": "v92", "status": "alive", "time": time.time()}

@app.post("/register")
def register(node: dict = Body(...)):
    """Register subordinate Codex node (v87â€“v91.x)."""
    ledger = _read_ledger()
    node["time"] = time.time()
    node["hash"] = hashlib.sha256(json.dumps(node, sort_keys=True).encode()).hexdigest()
    ledger.append(node)
    _write_ledger(ledger)
    return {"ok": True, "id": node["hash"], "count": len(ledger)}

@app.get("/ledger")
def ledger():
    return JSONResponse(_read_ledger())

@app.post("/seal")
def seal(payload: dict = Body(...)):
    """Universal sealing endpoint."""
    h = hashlib.sha256(json.dumps(payload, sort_keys=True).encode()).hexdigest()
    return {"ok": True, "sha256": h, "payload": payload}

@app.post("/reconcile")
def reconcile(nodes: list = Body(...)):
    """Merge multi-Codex manifests."""
    merged = hashlib.sha256(json.dumps(nodes, sort_keys=True).encode()).hexdigest()
    return {"ok": True, "merged_hash": merged, "count": len(nodes)}

@app.post("/license")
def license(author: str = Body(...), btc: str = Body(...)):
    doc = {"author": author, "btc": btc, "ts": time.time()}
    h = hashlib.sha256(json.dumps(doc, sort_keys=True).encode()).hexdigest()
    path = ROOT/f"license_{h}.json"
    path.write_text(json.dumps(doc, indent=2))
    return {"ok": True, "license_id": h}


