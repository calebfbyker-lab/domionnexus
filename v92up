âš™ï¸ src/registry/watcher.py

import json, time, requests, pathlib
REGISTRY = pathlib.Path("src/registry/nodes.json")
LEDGER = pathlib.Path("data/ledger.json")

def load_nodes():
    return json.loads(REGISTRY.read_text()) if REGISTRY.exists() else []

def ping_all():
    results = []
    for n in load_nodes():
        try:
            r = requests.get(n["url"] + "/ping", timeout=3).json()
            results.append({"name": n["name"], "alive": True, "data": r})
        except Exception:
            results.append({"name": n["name"], "alive": False})
    LEDGER.write_text(json.dumps(results, indent=2))
    return results

if __name__ == "__main__":
    while True:
        print("Scanning Codex network...")
        print(ping_all())
        time.sleep(30)


