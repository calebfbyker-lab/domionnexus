scripts/build.py

#!/usr/bin/env python3
import json, os, hashlib, time, shutil, pathlib

ROOT = pathlib.Path(__file__).resolve().parents[1]
DATA = ROOT / "data"
SITE = ROOT / "site"
OUT = ROOT  # publish to root for GitHub Pages

def sha256_bytes(b: bytes)->str:
    h=hashlib.sha256(); h.update(b); return h.hexdigest()

def sha256_file(p: pathlib.Path)->str:
    h=hashlib.sha256()
    with open(p, "rb") as f:
        for chunk in iter(lambda: f.read(8192), b""):
            h.update(chunk)
    return h.hexdigest()

def write(p: pathlib.Path, text: str):
    p.write_text(text, encoding="utf-8")

now = time.strftime("%Y-%m-%dT%H:%M:%SZ", time.gmtime())

items = []
for rel in ["data/psalms.txt","data/proverbs.txt","data/songs.txt","site/index.html","site/styles.css"]:
    p = ROOT / rel
    sha = sha256_file(p)
    items.append({"path": rel, "sha256": sha})
    # sidecar
    (p.parent / (p.name + ".sha256")).write_text(sha+"\n", encoding="utf-8")

manifest = {
    "title": "Codex Aeternum â€” CFBK Triune Edition",
    "generated_utc": now,
    "subject_sha256": "2948fbc4ba1c0d7341204908882b89134a999f3e8f77f4a6a00ce6b68770282a",
    "items": items,
    "payment": {"bitcoin":"bc1qfejvvlfm6vmjarxulg9h9d5hjukdh8l2vvskfc","lightning_invoice_example":"lnbc1p5s0ppfdqdgdshx6...pqwppcn"},
    "deploy": {"target":"GitHub Pages","notes":"Serve /site as root or copy files to /"}
}
write(ROOT / "manifest.json", json.dumps(manifest, indent=2))

# Copy site files to root for GitHub Pages (optional: use Pages 'docs' or root strategy)
for name in ["index.html","styles.css"]:
    src = SITE / name
    dst = ROOT / name
    shutil.copy2(src, dst)

print("Manifest and checksums written. Site ready at repository root.")


---

.github/workflows/publish.yml

name: Publish Codex Aeternum (GH Pages)

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Build
        run: |
          python scripts/build.py

      - name: Setup Pages
        uses: actions/configure-pages@v5

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4


