type CodexNode = {
  name: string;
  type: "estate"|"city"|"sacredSite"|"archetype"|"function"|"deity"|"hidden"|"seal";
  state?: string;
  archetype?: string;
  lineage: string;
  emoji?: string;
  glyph?: string;
  functionDesc: string;
  quantumKey: string;
  hash: string;
  connectedTo: string[];
  geo?: {lat: number, lng: number};
  anchorEstate: string;
  lifethread: string;
  dateSeal: string;
  trapSeal?: boolean;
  authorizedGuardians?: string[];
};

