ğŸ§® scripts/eirenex_alerts.py

#!/usr/bin/env python3
"""
v184.x â€” Eirene.x Alerts
Reads latest stream metrics and generates alerts when below threshold.
"""
import json, os, datetime, hashlib

OUT="eirenex/alerts.json"

def now(): return datetime.datetime.utcnow().isoformat()+"Z"
def sha(o): return hashlib.sha256(json.dumps(o,sort_keys=True).encode()).hexdigest()

def check_alerts():
    try: s=json.load(open("eirenex/stream_state.json"))
    except: return []
    alerts=[]
    if s["fairness"]<s["thresholds"]["fairness_min"]:
        alerts.append({"severity":"warning","metric":"fairness",
                       "message":"Fairness below threshold","value":s["fairness"]})
    if s["transparency"]<s["thresholds"]["transparency_min"]:
        alerts.append({"severity":"warning","metric":"transparency",
                       "message":"Transparency below threshold","value":s["transparency"]})
    if s["trust_index"]<0.75:
        alerts.append({"severity":"critical","metric":"trust_index",
                       "message":"Network trust degrading","value":s["trust_index"]})
    for a in alerts:
        a["timestamp_utc"]=now()
        a["sha256"]=sha(a)
    os.makedirs("eirenex",exist_ok=True)
    json.dump(alerts,open(OUT,"w"),indent=2)
    print(f"Eirene.x alerts: {len(alerts)} event(s)")
    return alerts

if __name__=="__main__": check_alerts()


