ğŸŒ server/routes/eirene.js

import { readFileSync } from "fs";
function send(res,code,obj){res.writeHead(code,{"Content-Type":"application/json"});res.end(JSON.stringify(obj,null,2));}

export const eireneRoutes = async (req,res)=>{
  if(req.method==="GET" && req.url==="/api/eirene/ethics"){
    try{return send(res,200,JSON.parse(readFileSync("eirene/ethics_report.json","utf-8")));}
    catch{return send(res,404,{error:"no ethics report"});}
  }
  if(req.method==="GET" && req.url==="/api/eirene/stability"){
    try{return send(res,200,JSON.parse(readFileSync("eirene/stability_state.json","utf-8")));}
    catch{return send(res,404,{error:"no stability state"});}
  }
  return false;
};


