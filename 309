"""
Ledger Oracle â€” connects symbolic CodexCoin states with external BTC / ETH explorers (mocked).
"""
import requests

def btc_price_usd():
    try:
        return requests.get("https://api.coindesk.com/v1/bpi/currentprice/BTC.json").json()["bpi"]["USD"]["rate"]
    except Exception:
        return "mock:100000"

def eth_price_usd():
    try:
        return requests.get("https://api.coinbase.com/v2/prices/ETH-USD/spot").json()["data"]["amount"]
    except Exception:
        return "mock:8000"


