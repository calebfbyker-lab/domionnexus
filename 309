    field = {
        "ts": datetime.datetime.utcnow().isoformat()+"Z",
        "coherence": coherence,
        "lucidity": lucidity,
        "articulation": articulation,
        "insight": insight
    }
    field["sha256"] = hashlib.sha256(json.dumps(field).encode()).hexdigest()
    SEMANTIC.write_text(json.dumps(field, indent=2))
    return field


