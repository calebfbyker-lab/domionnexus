âš™ï¸ core/codexcoin_engine.py

"""
CodexCoin Engine (symbolic economic simulation)
Simulates internal coin flow and integrity auditing across Codex networks.
"""
import json, pathlib, datetime, random
from core.crypto_integrity import hmac_sha256, ed25519_sign, merkle_root

LEDGER = pathlib.Path("ledger/codexcoin_ledger.json")

def mint_coins(address:str, amount:float, secret:str):
    tx = {
        "timestamp": datetime.datetime.utcnow().isoformat()+"Z",
        "address": address,
        "amount": round(amount,8),
        "hash": hmac_sha256(f"{address}{amount}", secret)
    }
    existing = json.loads(LEDGER.read_text()) if LEDGER.exists() else []
    existing.append(tx)
    LEDGER.write_text(json.dumps(existing, indent=2))
    return tx

def audit_ledger():
    if not LEDGER.exists(): return {"status":"no_ledger"}
    entries = json.loads(LEDGER.read_text())
    hashes = [tx["hash"] for tx in entries]
    root = merkle_root(hashes)
    return {"entries":len(entries),"merkle_root":root}

def sign_state():
    state = audit_ledger()
    return ed25519_sign(json.dumps(state))


