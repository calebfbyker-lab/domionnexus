from fastapi import FastAPI
from core.codexcoin_engine import mint_coins, audit_ledger, sign_state
from core.ledger_oracle import btc_price_usd, eth_price_usd

app = FastAPI(title="Codex Pleroma Economicus API", version="v312.x")

@app.post("/mint")
def api_mint(address:str, amount:float, secret:str):
    return mint_coins(address, amount, secret)

@app.get("/audit")
def api_audit():
    return audit_ledger()

@app.get("/sign")
def api_sign():
    return sign_state()

@app.get("/prices")
def api_prices():
    return {"BTC": btc_price_usd(), "ETH": eth_price_usd()}


