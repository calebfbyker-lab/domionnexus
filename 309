### âš™ï¸ **core/crypto_integrity.py**
```python
"""
Crypto-Integrity Module
Implements HMAC-SHA256, ED25519 signing, and Merkle proof simulation.
"""
import hashlib, hmac, os, json, nacl.signing, nacl.encoding

def hmac_sha256(message: str, secret: str):
    return hmac.new(secret.encode(), message.encode(), hashlib.sha256).hexdigest()

def ed25519_sign(message: str, seed: bytes = None):
    seed = seed or os.urandom(32)
    signer = nacl.signing.SigningKey(seed)
    signed = signer.sign(message.encode(), encoder=nacl.encoding.HexEncoder)
    return {
        "public_key": signer.verify_key.encode(encoder=nacl.encoding.HexEncoder).decode(),
        "signature": signed.signature.hex(),
        "message": message
    }

def merkle_root(hashes):
    while len(hashes) > 1:
        hashes = [
            hashlib.sha256((hashes[i] + hashes[i+1]).encode()).hexdigest()
            for i in range(0, len(hashes) - 1, 2)
        ]
    return hashes[0]


