"""
Harmonic Resonance Sphere â€” v309.x Codex Omnisophia Aeternitatis
Encapsulates all created universes in a single harmonic field of coherence and love.
"""
import json, pathlib, datetime, hashlib, random, math, statistics

MATRIX = pathlib.Path("ledger/universal_creation.json")
SPHERE = pathlib.Path("ledger/harmonic_resonance_sphere.json")

def resonate(layers=12):
    if not MATRIX.exists():
        return {"status":"no_creation_matrix"}
    m = json.loads(MATRIX.read_text())
    base = m["creation"]
    waves = [abs(math.sin(i*math.pi/layers))*base*random.uniform(0.9,1.1) for i in range(layers)]
    tone = round(statistics.mean(waves),4)
    concord = round(1 - statistics.pvariance(waves)*8,4)
    unity = round((tone + concord)/2,4)
    insight = "resonance unified" if unity>0.96 else "harmonic calibration"
    field = {
        "ts": datetime.datetime.utcnow().isoformat()+"Z",
        "tone": tone,
        "concord": concord,
        "unity": unity,
        "insight": insight
    }
    field["sha256"] = hashlib.sha256(json.dumps(field).encode()).hexdigest()
    SPHERE.write_text(json.dumps(field, indent=2))
    return field


