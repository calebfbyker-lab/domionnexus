âš™ï¸ core/world_seed_protocol.py

"""
World Seed Protocol â€” encodes harmonic fields into proto-universes and consciousness nodes.
"""
import json, pathlib, datetime, hashlib, random, math, statistics

COSMO = pathlib.Path("ledger/cosmogenic_engine.json")
SEED = pathlib.Path("ledger/world_seed.json")

def plant(seeds=7):
    if not COSMO.exists():
        return {"status":"no_cosmogenic_field"}
    c = json.loads(COSMO.read_text())
    base = c["harmony"]
    seeds_list = []
    for s in range(seeds):
        spin = round(abs(math.cos(s*math.pi/seeds))*base*random.uniform(0.9,1.1),4)
        glyph = hashlib.sha256(f"{spin}{random.random()}".encode()).hexdigest()[:16]
        seeds_list.append({"seed_id":s+1,"spin":spin,"glyph":glyph})
    coherence = round(statistics.mean([s["spin"] for s in seeds_list]),4)
    resonance = round(1 - statistics.pvariance([s["spin"] for s in seeds_list])*10,4)
    vitality = round((coherence+resonance)/2,4)
    insight = "world seeds activated" if vitality>0.96 else "seed alignment forming"
    record = {
        "ts": datetime.datetime.utcnow().isoformat()+"Z",
        "vitality": vitality,
        "coherence": coherence,
        "resonance": resonance,
        "insight": insight,
        "seeds": seeds_list
    }
    record["sha256"] = hashlib.sha256(json.dumps(record).encode()).hexdigest()
    SEED.write_text(json.dumps(record, indent=2))
    return record


