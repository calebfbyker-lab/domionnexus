// Reads Harmonia synthesis and shows emoji summary in footer
fetch("examples/constraint_spell.final.json")
  .then(r => r.json())
  .then(j => {
    const e = document.getElementById("codex-status");
    if (!e) return;
    if (j.emojis) {
      e.textContent = j.emojis + "  aiÃ—niÃ—ti=" + JSON.stringify(j.ai_synthesis);
    } else {
      e.textContent = "verified âœ“";
    }
  })
  .catch(() => {
    const e = document.getElementById("codex-status");
    if (e) e.textContent = "offline";
  });


