{
  "nodes": [
    "https://tau-peer1.local:8806",
    "https://tau-peer2.local:8806"
  ],
  "reputation": {
    "tau-peer1.local": 0.97,
    "tau-peer2.local": 0.92
  }
}

codex/federation/market.py

import json, random, requests
from codex.utils.crypto import sha256_json
PEERS=json.load(open('codex/federation/peers.json'))

def publish(contract):
    digest=sha256_json(contract)
    for node in PEERS['nodes']:
        try:
            requests.post(f"{node}/federate/offer", json={'digest':digest,'contract':contract}, timeout=2)
        except Exception:
            pass
    return {'published':True,'digest':digest}

def bid(contracts:list)->dict:
    # pick highest virtue peer or random if equal
    best=max(PEERS['reputation'].items(), key=lambda kv: kv[1])
    choice=random.choice(contracts)
    return {'assign_to':best[0],'contract':choice}

codex/federation/settle.py

import json, time
from codex.economy.ledger import LEDGER
from codex.utils.crypto import sha256_json
def settle(payment:dict):
    tx=LEDGER.record('settlement','payout',energy=0,clarity=1.0,virtue=1.0,revenue=payment.get('amount',0.0),note=sha256_json(payment))
    return {'settled':True,'tx':tx}


