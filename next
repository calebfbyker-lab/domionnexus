web/app.js

async function runXTSG() {
  const text = document.getElementById("xtsg").value;
  const res = await fetch("/api/run/xtsg", {
    method: "POST",
    headers: {"Content-Type":"application/json"},
    body: JSON.stringify({text})
  });
  const data = await res.json();
  const ev = document.getElementById("events");
  ev.textContent = JSON.stringify(data.events, null, 2);
  const ru = document.getElementById("rollup");
  ru.textContent = data.fedorian_rollup || "(none)";
}
document.getElementById("runX").addEventListener("click", runXTSG);

try {
  const ws = new WebSocket(`ws://${location.host}/ws/events`);
  ws.onopen = () => ws.send("hello");
  ws.onmessage = (e) => {
    const msg = JSON.parse(e.data);
    const ev = document.getElementById("events");
    ev.textContent = JSON.stringify(msg, null, 2) + "\n" + ev.textContent;
  };
} catch (e) {}

