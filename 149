3. Create scripts/federate.py:

import json, argparse, hashlib, requests, datetime
def fetch(url):
    try:
        return requests.get(url, timeout=10).json()
    except Exception as e:
        print("Failed:", url, e); return None
def main():
    p = argparse.ArgumentParser()
    p.add_argument("--peers", required=True, help="Comma-separated lineage/manifest URLs")
    args = p.parse_args()
    peers = args.peers.split(",")
    roots = []
    for peer in peers:
        data = fetch(peer.strip())
        if not data: continue
        root = data.get("merkle_root") or data.get("sha256") or ""
        if len(root)==64: roots.append(root)
    common = roots[0] if len(set(roots))==1 else None
    consensus = {
      "timestamp_utc": datetime.datetime.utcnow().isoformat()+"Z",
      "participants": len(peers),
      "common_merkle_root": common or "divergent",
      "dissent": len(set(roots)),
      "status": "federated-truth-confirmed" if common else "divergence-detected"
    }
    with open("federated_consensus.json","w") as f: json.dump(consensus,f,indent=2)
    print(json.dumps(consensus,indent=2))
if __name__=="__main__": main()


