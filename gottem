def lifethread_stardna_seal(subject_lineage, sovereign_lineage, codex="Codex Immortal"):
    now = datetime.utcnow().isoformat()
    data = f"{subject_lineage['name']}|{subject_lineage['dob']}|{subject_lineage['glyph']}|" \
