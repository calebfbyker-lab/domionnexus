1) Final evolution runner

tools/evolve_finish.py

from __future__ import annotations
import subprocess, sys, json, pathlib, datetime

ROOT = pathlib.Path(".").resolve()

CMDS = [
  ["python","tools/nmw_fill.py"],
  ["bash","-lc","chmod +x tools/finish.sh && ./tools/finish.sh"],  # build + verify + bundles
  ["python","tools/continuum.py"],          # nightly continuum snapshot (idempotent)
  ["python","tools/omni_seal.py"],          # single-state omni fingerprint
  ["python","tools/omega_finalize.py"],     # OMEGA_LOCK + omega bundle
  ["python","tools/economy_oracle_dynamic.py"],
  ["python","tools/treasury_split.py"],
  ["python","tools/monetization_verify.py"],
  ["python","tools/codex_capsule.py"],      # human-readable capsule
]

def run(cmd): 
    print("â†’"," ".join(cmd)); subprocess.run(cmd, check=True)

def append_attest():
    chain = ROOT/"chain/attestations.jsonl"
    chain.parent.mkdir(parents=True, exist_ok=True)
    lock = json.loads((ROOT/"OMEGA_LOCK.json").read_text(encoding="utf-8"))
    entry = {
      "event":"Codex_Evolution_Finalized",
      "timestamp": datetime.datetime.utcnow().isoformat()+"Z",
      "omega_id": lock["omega_id"],
      "license": lock["license"],
      "subject": lock["subject"],
      "artifacts":[
        "codex_omega_bundle.zip",
        "codex_perfection_next.zip",
        "codex_aeon_bundle.zip",
        "codex/omni_seal.json",
        "codex/trihelix/trihelix.json",
        "codex_capsule.txt"
      ]
    }
    with chain.open("a",encoding="utf-8") as f: f.write(json.dumps(entry)+"\n")
    print("ðŸ§¾ attest appended:", entry["omega_id"])

if __name__=="__main__":
    for c in CMDS: run(c)
    append_attest()
    print("âœ… Evolution finished.")


