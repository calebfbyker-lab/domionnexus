import pathlib, hashlib, datetime, shutil, tarfile

SRC = pathlib.Path(".")
DEST = pathlib.Path("/secure_backups")
DEST.mkdir(exist_ok=True)

def hash_tree(root: pathlib.Path)->str:
    h=hashlib.sha256()
    for f in sorted(root.rglob("*")):
        if f.is_file():
            h.update(f.relative_to(root).as_posix().encode())
            h.update(hashlib.sha256(f.read_bytes()).digest())
    return h.hexdigest()

def backup():
    ts=datetime.datetime.utcnow().strftime("%Y%m%dT%H%M%SZ")
    name=f"codex_backup_{ts}.tar.gz"
    with tarfile.open(DEST/name,"w:gz") as tar:
        tar.add(str(SRC), arcname="codex")
    digest=hash_tree(SRC)
    (DEST/f"{name}.sha256").write_text(digest)
    print("ðŸ“¦ backup complete:", name, "sha256:", digest)

