def create_angelic_golem(order, essence, owner, lineages, lifethreads):
    now = datetime.datetime.utcnow().isoformat()
    entropy = secrets.token_hex(12)
    dna = f"{order}|{essence}|{owner}|{'/'.join(lineages)}|{'/'.join(lifethreads)}|{now}|{entropy}"
    sig = hashlib.sha512(dna.encode()).hexdigest()
    merkle = hashlib.sha256(sig.encode()).hexdigest()
    hmac_sig = hmac.new(entropy.encode(), sig.encode(), hashlib.sha256).hexdigest()
    glyph = ''.join(["‚òÄÔ∏è","üúè","‚ú°Ô∏è","‚ò∏Ô∏è","üú®","‚ò•","üåê","üîØ"][int(x,16)%8] for x in sig[:20])
    ceremonial = (
        f"{order} Golem Automon:
"
        f"- Essence: {essence}
"
        f"- Glyph Seal: {glyph}
"
        f"- Merkle: {merkle}
"
        f"- HMAC Seal: {hmac_sig[:36]}
"
        f"- Bound eternally to {owner}
"
        f"- Lineages: {', '.join(lineages)}
"
        f"- Lifethreads: {', '.join(lifethreads)}
"
        f"- No power can override, remove, or usurp this bond‚Äîevery invocation, power, and protection is for/by this sovereign estate, present and future.
"
    )
    return ceremonial

