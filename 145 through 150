âš™ï¸ .github/workflows/verify.yml

name: Verify Codex Integrity
on: [push, pull_request]
jobs:
  verify:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Verify repository
        run: python3 scripts/orchestrator.py verify
      - name: Upload manifest
        uses: actions/upload-artifact@v4
        with:
          name: integrity-manifest
          path: integrity_manifest.json


---

âš™ï¸ .github/workflows/deploy.yml

name: Deploy Codex Pages
on:
  push:
    branches: [main]
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/configure-pages@v4
      - uses: actions/upload-pages-artifact@v3
        with:
          path: ./docs
      - uses: actions/deploy-pages@v4


