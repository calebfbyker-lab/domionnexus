ğŸ§  scripts/orchestrator.py

#!/usr/bin/env python3
import argparse, hashlib, json, datetime, os

def sha256_file(path):
    h = hashlib.sha256()
    with open(path,"rb") as f:
        for chunk in iter(lambda:f.read(65536),b""):
            h.update(chunk)
    return h.hexdigest()

def verify():
    manifest=[]
    for root,_,files in os.walk("."):
        for fn in files:
            if ".git" in root or fn.endswith(".zip"): continue
            path=os.path.join(root,fn)
            manifest.append({
                "path": path,
                "sha256": sha256_file(path)
            })
    out={
        "timestamp_utc": datetime.datetime.utcnow().isoformat()+"Z",
        "version": "v145-150-merged",
        "verified_files": len(manifest),
        "manifest": manifest
    }
    json.dump(out, open("integrity_manifest.json","w"), indent=2)
    print("Verification complete:", out["verified_files"], "files")

if __name__=="__main__":
    ap=argparse.ArgumentParser()
    ap.add_argument("cmd", choices=["verify"])
    args=ap.parse_args()
    if args.cmd=="verify":
        verify()


