import hashlib, random
def generate(seed:str):
    pattern = "".join(random.choice("â–²â—†â– â—âœ¶âœ¹âœºâœ»âœ¼âˆâ‰âœµ") for _ in range(len(seed)//2))
    digest = hashlib.sha256(pattern.encode()).hexdigest()[:16]
    return {"art":pattern,"signature":digest}


