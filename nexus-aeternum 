1) PR Gate: policy, tests, seals, style, licenses

.github/workflows/codex_pr_gate.yml

name: codex-pr-gate
on:
  pull_request:
    types: [opened, synchronize, reopened, ready_for_review]
permissions:
  contents: read
  pull-requests: write
jobs:
  gate:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with: { fetch-depth: 0 }
      - uses: actions/setup-python@v5
        with: { python-version: '3.11' }
      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt || true
          pip install pytest cyclonedx-bom
      - name: Policy: required files
        run: |
          python tools/monetization_policy_enforce.py
      - name: Tests
        run: pytest -q || true
      - name: Seal verify
        run: |
          python tools/monetization_verify.py
      - name: Build SBOM (CycloneDX)
        run: |
          cyclonedx-bom -o sbom.cdx.json || true
      - name: Commitlint (Conventional Commits)
        uses: wagoid/commitlint-github-action@v6
        with:
          configFile: .github/commitlint.config.cjs
      - name: PR check summary
        run: |
          echo "‚úÖ PR Gate checks complete."

.github/commitlint.config.cjs

module.exports = {
  extends: ['@commitlint/config-conventional'],
  rules: {
    'subject-case': [2, 'always', ['sentence-case', 'lower-case']]
  }
};


