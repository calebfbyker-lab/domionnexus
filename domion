3) Minimal API status (optional)

Append to api/server.py:

import json, pathlib

@app.get("/api/status/aeon")
def api_status_aeon():
    def readj(p): 
        pp=pathlib.Path(p)
        return json.loads(pp.read_text()) if pp.exists() else None
    return {
      "trihelix": readj("codex/trihelix/trihelix.json"),
      "economy": {
        "oracle": readj("economy_price_oracle.json"),
        "treasury": readj("treasury_strategy.json"),
        "audit": readj("economy_audit.json")
      },
      "chain_commits": (pathlib.Path("chain/attestations.jsonl").read_text().splitlines() if pathlib.Path("chain/attestations.jsonl").exists() else []),
      "neural_demo": readj("dist_neural_demo.json")
    }


