1) Orchestrator ‚Äî tools/aeon_finalize.py

from __future__ import annotations
import subprocess, pathlib, sys, json, shutil, datetime

ROOT = pathlib.Path(".").resolve()
DIST = ROOT / "dist_aeon_final"
DIST.mkdir(exist_ok=True, parents=True)

def run(cmd:list[str], soft=False):
    print("‚Üí", " ".join(cmd))
    try:
        subprocess.run(cmd, check=True)
    except subprocess.CalledProcessError as e:
        if soft: print("(!) soft-fail:", e)
        else: raise

def add(item:str):
    src = ROOT / item
    if not src.exists(): return
    dst = DIST / item
    if src.is_dir():
        if dst.exists(): shutil.rmtree(dst)
        dst.parent.mkdir(parents=True, exist_ok=True)
        shutil.copytree(src, dst)
    else:
        dst.parent.mkdir(parents=True, exist_ok=True)
        shutil.copy2(src, dst)
    print("üì¶ added", item)

def write_json(p: pathlib.Path, obj: dict):
    p.parent.mkdir(parents=True, exist_ok=True)
    p.write_text(json.dumps(obj, indent=2), encoding="utf-8")
    print("‚úì wrote", p)

def main():
    # 0) Preflight verification (soft)
    run([sys.executable, "tools/verify_everything.py"], soft=True)

    # 1) Grimoire seed & compile catalog
    run([sys.executable, "tools/grimoire_seed.py"], soft=True)

    # 2) Seals: forge ‚Üí svg ‚Üí canon ‚Üí index
    run([sys.executable, "tools/seal_forge.py"], soft=True)
    run([sys.executable, "tools/seal_svg.py"], soft=True)
    run([sys.executable, "-c", "from codex.ambrosia import curate_canon; curate_canon();"], soft=True)
    run([sys.executable, "tools/seal_index.py"], soft=True)

    # 3) Sector sims (finance/health/defense/government)
    run([sys.executable, "tools/sector_dominion_demo.py"], soft=True)

    # 4) Data + Crypto + Space
    run([sys.executable, "tools/dominion_data_crypto_space.py"], soft=True)

    # 5) XTSG‚ÜíAdamic demo
    ROOT.joinpath("examples").mkdir(exist_ok=True)
    (ROOT/"examples/aeon.xtsg").write_text(
        "xtsg: planet=Mars element=Fire geometry=Hexagon harmonic:interval=Fifth "
        "family:Kabbalistic family:Hermetic family:NexusAeternum ai ni ti", encoding="utf-8"
    )
    run([sys.executable, "tools/xtsg_compile.py", "examples/aeon.xtsg"], soft=True)

    # 6) Lineage seal (soft)
    run([sys.executable, "tools/lineage_seal.py"], soft=True)

    # 7) Chain ‚Üî symbol bridge (BTC/ETH attestations + EIP-712 receipt)
    run([sys.executable, "tools/crypto_symbol_bridge_demo.py"], soft=True)

    # 8) Economy: pricing, treasury, audit
    run([sys.executable, "tools/price_oracle.py"], soft=True)
    run([sys.executable, "tools/treasury_strategy.py"], soft=True)
    run([sys.executable, "tools/audit_economy.py"], soft=True)

    # 9) Threefold evolution (attest/ledger/gov/backups)
    run([sys.executable, "tools/threefold_evolution.py"], soft=True)

    # 10) Tri-Helix seal (JSON + SVG) & bundle
    run([sys.executable, "tools/trihelix_forge.py"], soft=True)
    run([sys.executable, "tools/trihelix_verify_and_bundle.py"], soft=True)

    # 11) Neural interface demo (sim ‚Üí features ‚Üí intent; compile gated)
    run([sys.executable, "tools/neural_demo.py"], soft=True)

    # 12) Publish static site
    run([sys.executable, "tools/publish_static.py"], soft=True)

    # 13) Final hard verify
    run([sys.executable, "tools/verify_everything.py"])

    # 14) License bind the final bundle if present, else bind trihelix bundle
    target = "codex_final_evolution_bundle.zip"
    if not (ROOT/target).exists():
        target = "codex_trihelix_bundle.zip"
    (ROOT/"codex/").mkdir(exist_ok=True)
    (ROOT/"tools/license_bind_seal.py").exists() and run([sys.executable, "tools/license_bind_seal.py"], soft=True)

    # 15) Collect artifacts
    keep = [
        "codex/license_bind_seal.json",
        "codex/trihelix/trihelix.json", "codex/trihelix/trihelix.svg",
        "grimoire/registry.jsonl", "grimoire/catalog.json", "grimoire/chain_links.jsonl",
        "codex/seals/index.json", "codex/seals/canon.json", "codex/seals/svg",
        "codex/seals/custom", "codex/seals/lineage/svg",
        "sector_dominion_snapshot.json", "dist_data_crypto_space.json",
        "compile_out.json", "ledger.jsonl",
        "economy_price_oracle.json", "treasury_strategy.json", "economy_audit.json",
        "chain/attestations.jsonl",
        "attest/tri_attest.jsonl", "tri_ledger/append.jsonl", "tri_ledger/merkle.json", "tri_ledger/snapshot.json",
        "tri_gov/proposals.jsonl",
        "backup/report.json",
        "dist_neural_demo.json",
        "site"
    ]
    for k in keep: add(k)

    # 16) √Üon note + zip
    note = {
        "event": "aeon_finalize",
        "timestamp": datetime.datetime.utcnow().isoformat()+"Z",
        "message": "√Üon fusion complete: codex + sectors + crypto/space + economy + tri-helix + neural + attest.",
    }
    write_json(DIST/"AEON_NOTE.json", note)
    zip_path = shutil.make_archive("codex_aeon_bundle", "zip", DIST)
    print("üéÅ bundle:", zip_path)

if __name__ == "__main__":
    main()


