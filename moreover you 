import sys
import json
import hashlib
import hmac
import datetime
import os

# ==============================================================================
# MERCURIUS RUNTIME ENGINE v53.x
# ==============================================================================

class MercuriusEngine:
    def __init__(self, blueprint_path):
        self.path = blueprint_path
        self.data = self._load_blueprint()
        self.timestamp = datetime.datetime.utcnow().isoformat()

    def _load_blueprint(self):
        """Ingests the JSON Grid."""
        if not os.path.exists(self.path):
            print(f"‚ùå ERROR: Blueprint not found at {self.path}")
            sys.exit(1)
        with open(self.path, 'r') as f:
            return json.load(f)

    def transmute_grid(self):
        """Converts the 4x4 Enochian Matrix into a linear spectral string."""
        matrix = self.data['matrix']
        # Flatten the grid: PA + VE + GNA + B ...
        linear_stream = "".join(["".join(row) for row in matrix])
        print(f"üíé ENOCHIAN STREAM DETECTED: {linear_stream}")
        return linear_stream

