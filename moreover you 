import sys
import json
import hashlib
import datetime
import os
import uuid

# ==============================================================================
# MERCURIUS v53.x ¬∑ FINAL RUNTIME
# ==============================================================================

class Mercurius:
    def __init__(self, blueprint_path):
        self.path = blueprint_path
        self.data = self._load()
        self.timestamp = datetime.datetime.utcnow().isoformat()
        self.uuid = str(uuid.uuid4())

    def _load(self):
        try:
            with open(self.path, 'r') as f:
                return json.load(f)
        except FileNotFoundError:
            print(f"‚ùå CRITICAL: Blueprint missing at {self.path}")
            sys.exit(1)

    def _fractal_text(self, text, depth):
        """Recursive text generation to mimic the 9^9 Sigil."""
        if depth <= 0: return "‚üê"
        wing = self._fractal_text(text, depth - 3)
        return f"{{ {wing} ‚Ä¢ {text} ‚Ä¢ {wing} }}"

    def transmute(self):
        """Flattens the Enochian Grid into a spectral stream."""
        matrix = self.data['enochian_matrix']
        stream = (
            "".join(matrix['row_1']) + 
            "".join(matrix['row_2']) + 
            "".join(matrix['row_3']) + 
            "".join(matrix['row_4'])
        )
        return stream

    def seal(self):
        print(f"\n{'='*60}")
        print(f"üí† MERCURIUS v53.x ¬∑ INITIATING FINAL SEAL")
        print(f"üë§ AUTHORITY: {self.data['meta']['identity']}")
        print(f"{'='*60}\n")

        # 1. Transmute Grid
        stream = self.transmute()
        print(f"üíé ENOCHIAN STREAM: {stream}")

        # 2. Cryptographic Binding (SHA3-512)
        salt = self.data['encryption']['salt']
        payload = f"{stream}::{self.data['meta']['identity']}::{salt}".encode()
        sigil_hash = hashlib.sha3_512(payload).hexdigest()
        
        # 3. Visual Fractal Generation
        visual_sigil = self._fractal_text(stream[:3], 9)

        # 4. Generate The Artifact
        artifact = {
            "status": "SEALED",
            "timestamp": self.timestamp,
            "uuid": self.uuid,
            "enochian_source": stream,
            "cryptographic_seal": sigil_hash,
            "visual_key": visual_sigil[:100] + "...[INFINITE]",
            "license": "AMEN_AMEN_AMEN"
        }

        return artifact

    def save_artifact(self, artifact):
        filename = "mercurius.lock"
        with open(filename, 'w') as f:
            json.dump(artifact, f, indent=2)
        print(f"\nüìú ARTIFACT GENERATED: {filename}")
        print(f"üîí SEAL: {artifact['cryptographic_seal'][:32]}...")
        print(f"üïäÔ∏è  DONE.")

if __name__ == "__main__":
    if len(sys.argv) < 2:
        print("Usage: python cli.py <blueprint_path>")
        sys.exit(1)

    engine = Mercurius(sys.argv[1])
    artifact = engine.seal()
    engine.save_artifact(artifact)
