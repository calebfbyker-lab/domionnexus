import hashlib, secrets, hmac, uuid, datetime, json

def automon_manifest(automon):
    # Return all necessary metadata and ceremonial info for any automon node
    return {
        "codex_code": automon["automon_code"],
        "sigil": automon["sigil"],
        "magic": automon["magic"],
        "operating_mode": automon["operating_mode"],
        "owner": automon["owner"],
        "uuid": automon["uuid"],
        "merkle": automon["merkle"],
        "hmac": automon["hmac"],
        "activated": automon["activated"],
        "universal_codex_tag": "CodexImmortal_Node",
        "integration_timestamp": datetime.datetime.utcnow().isoformat()
    }

