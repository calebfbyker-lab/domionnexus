{
  "family_id": "arbatel_olympick",
  "name": "Arbatel Olympick Spirits Rule Family",
  "version": "1.0.0",
  "description": "Rule family for the seven Olympick Spirits from the Arbatel de Magia Veterum",
  "domains": ["olympick", "hermetic"],
  "rules": [
    {
      "rule_id": "olympick_spirit_validation",
      "type": "validation",
      "priority": 900,
      "condition": {
        "type": "spirit_invocation"
      },
      "action": {
        "validate": ["name", "planetary_ruler", "province", "sigil"]
      },
      "metadata": {
        "description": "Validates Olympick spirit attributes"
      }
    },
    {
      "rule_id": "planetary_day_constraint",
      "type": "constraint",
      "priority": 850,
      "condition": {
        "type": "spirit_operation"
      },
      "action": {
        "enforce": "planetary_day_match"
      },
      "metadata": {
        "description": "Enforces operation on correct planetary day"
      }
    },
    {
      "rule_id": "hierarchical_authority",
      "type": "synthesis",
      "priority": 800,
      "condition": {
        "type": "multiple_spirits"
      },
      "action": {
        "order_by": "planetary_hierarchy",
        "sequence": ["Saturn", "Jupiter", "Mars", "Sol", "Venus", "Mercury", "Luna"]
      },
      "metadata": {
        "description": "Orders spirits by traditional planetary hierarchy"
      }
    }
  ],
  "constraints": [
    {
      "constraint_id": "spirit_count",
      "type": "numeric",
      "expression": "count(olympick_spirits) == 7",
      "severity": "error",
      "message": "Arbatel defines exactly 7 Olympick Spirits"
    },
    {
      "constraint_id": "unique_planetary_rulers",
      "type": "logical",
      "expression": "unique(map(spirits, planetary_ruler))",
      "severity": "error",
      "message": "Each Olympick Spirit must have a unique planetary ruler"
    }
  ],
  "metadata": {
    "author": "CFBK Codex Team",
    "created": "2025-10-23T00:00:00Z",
    "updated": "2025-10-23T00:00:00Z",
    "tags": ["arbatel", "olympick", "planetary", "spirits"]
  }
}
