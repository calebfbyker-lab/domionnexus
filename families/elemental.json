{
  "family_id": "elemental",
  "name": "Elemental Operations Rule Family",
  "version": "1.0.0",
  "description": "Rule family for elemental operations, correspondences, and transformations",
  "domains": ["elemental", "hermetic"],
  "rules": [
    {
      "rule_id": "element_validation",
      "type": "validation",
      "priority": 900,
      "condition": {
        "type": "elemental_present"
      },
      "action": {
        "validate": ["element_type", "qualities", "correspondences"]
      },
      "metadata": {
        "description": "Validates elemental attributes and correspondences"
      }
    },
    {
      "rule_id": "elemental_compatibility",
      "type": "constraint",
      "priority": 850,
      "condition": {
        "type": "multi_element_operation"
      },
      "action": {
        "enforce": "compatibility_check"
      },
      "metadata": {
        "description": "Checks compatibility between combined elements"
      }
    },
    {
      "rule_id": "element_synthesis",
      "type": "synthesis",
      "priority": 800,
      "condition": {
        "type": "requires_synthesis"
      },
      "action": {
        "synthesize": "composite_element",
        "method": "balanced_combination"
      },
      "metadata": {
        "description": "Synthesizes composite elemental forms"
      }
    },
    {
      "rule_id": "quintessence_extraction",
      "type": "transformation",
      "priority": 750,
      "condition": {
        "type": "all_elements_present"
      },
      "action": {
        "extract": "quintessence",
        "requires": ["fire", "water", "air", "earth"]
      },
      "metadata": {
        "description": "Extracts quintessence from four classical elements"
      }
    }
  ],
  "constraints": [
    {
      "constraint_id": "opposition_balance",
      "type": "logical",
      "expression": "if(present(fire)) then present(water) || present(earth)",
      "severity": "warning",
      "message": "Opposing elements should be balanced in operations"
    },
    {
      "constraint_id": "elemental_purity",
      "type": "numeric",
      "expression": "all(elements, purity >= 0.0 && purity <= 1.0)",
      "severity": "error",
      "message": "Elemental purity must be between 0.0 and 1.0"
    }
  ],
  "metadata": {
    "author": "CFBK Codex Team",
    "created": "2025-10-23T00:00:00Z",
    "updated": "2025-10-23T00:00:00Z",
    "tags": ["elemental", "classical", "transformations"]
  }
}
