{
  "family_id": "enochian_19",
  "name": "Enochian Calls Rule Family",
  "version": "1.0.0",
  "description": "Rule family for the 19 Enochian Calls (Liber Logaeth) and angelic correspondences",
  "domains": ["enochian"],
  "rules": [
    {
      "rule_id": "call_sequence_validation",
      "type": "validation",
      "priority": 900,
      "condition": {
        "type": "enochian_call_present"
      },
      "action": {
        "validate": ["sequence", "aethyr_correspondence", "key_structure"]
      },
      "metadata": {
        "description": "Validates Enochian call structure and ordering"
      }
    },
    {
      "rule_id": "aethyr_constraint",
      "type": "constraint",
      "priority": 850,
      "condition": {
        "type": "aethyr_invocation"
      },
      "action": {
        "enforce": "aethyr_sequence_order"
      },
      "metadata": {
        "description": "Enforces proper aethyr traversal order"
      }
    },
    {
      "rule_id": "angelic_name_synthesis",
      "type": "synthesis",
      "priority": 700,
      "condition": {
        "type": "requires_angelic_name"
      },
      "action": {
        "synthesize": "angelic_name",
        "source": "watchtower_tablets"
      },
      "metadata": {
        "description": "Synthesizes angelic names from tablet correspondences"
      }
    }
  ],
  "constraints": [
    {
      "constraint_id": "call_count",
      "type": "numeric",
      "expression": "count(calls) == 19",
      "severity": "error",
      "message": "Enochian system must contain exactly 19 canonical calls"
    },
    {
      "constraint_id": "language_purity",
      "type": "symbolic",
      "expression": "all(calls, match(text, enochian_alphabet))",
      "severity": "warning",
      "message": "Call text should use authentic Enochian vocabulary"
    }
  ],
  "metadata": {
    "author": "CFBK Codex Team",
    "created": "2025-10-23T00:00:00Z",
    "updated": "2025-10-23T00:00:00Z",
    "tags": ["enochian", "angelic", "calls"]
  }
}
