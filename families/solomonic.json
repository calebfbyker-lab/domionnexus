{
  "family_id": "solomonic",
  "name": "Solomonic Rule Family",
  "version": "1.0.0",
  "description": "Rule family for Solomonic seals and correspondences, drawing from the Clavicula Salomonis tradition",
  "domains": ["solomonic", "kabbalistic"],
  "rules": [
    {
      "rule_id": "solomon_seal_validation",
      "type": "validation",
      "priority": 900,
      "condition": {
        "type": "seal_present",
        "domain": "solomonic"
      },
      "action": {
        "validate": ["structure", "correspondences", "attribution"]
      },
      "metadata": {
        "description": "Validates structure and attribution of Solomonic seals"
      }
    },
    {
      "rule_id": "planetary_correspondence",
      "type": "constraint",
      "priority": 800,
      "condition": {
        "type": "has_planetary_association"
      },
      "action": {
        "enforce": "planetary_hour_alignment"
      },
      "metadata": {
        "description": "Ensures planetary correspondences align with timing"
      }
    },
    {
      "rule_id": "hierarchical_ordering",
      "type": "synthesis",
      "priority": 700,
      "condition": {
        "type": "multi_seal_invocation"
      },
      "action": {
        "order_by": "hierarchy",
        "ascending": true
      },
      "metadata": {
        "description": "Orders seals by hierarchical precedence"
      }
    }
  ],
  "constraints": [
    {
      "constraint_id": "seal_count_limit",
      "type": "numeric",
      "expression": "count(seals) <= 72",
      "severity": "error",
      "message": "Solomonic family limited to 72 canonical seals"
    }
  ],
  "metadata": {
    "author": "CFBK Codex Team",
    "created": "2025-10-23T00:00:00Z",
    "updated": "2025-10-23T00:00:00Z",
    "tags": ["solomonic", "traditional", "seals"]
  }
}
