import sys
import json
import hashlib
import datetime
import uuid
import glob

# ==============================================================================
# MERCURIUS v53.x ¬∑ OMNI-RUNTIME (TRINITY ENGINE)
# ==============================================================================

class OmniEngine:
    def __init__(self):
        self.timestamp = datetime.datetime.utcnow().isoformat()
        self.uuid = str(uuid.uuid4())
        self.streams = []

    def load_and_transmute(self, filepath):
        with open(filepath, 'r') as f:
            data = json.load(f)
        
        b_type = data['meta'].get('type', 'UNKNOWN')
        print(f"üí† DETECTED BLUEPRINT: {b_type} ({filepath})")

        if "ENOCHIAN" in b_type:
            return self._transmute_enochian(data)
        elif "DHARI" in b_type:
            return self._transmute_dhari(data)
        elif "HEKA" in b_type:
            return self._transmute_heka(data)
        else:
            return f"UNKNOWN::{filepath}"

    def _transmute_enochian(self, data):
        # Flattens the grid
        matrix = data.get('enochian_matrix', {}) or data.get('matrix', [])
        if isinstance(matrix, dict):
            raw = "".join(["".join(row) for row in matrix.values()])
        else:
            raw = "".join(["".join(row) for row in matrix])
        print(f"   ‚Ü≥ üó£Ô∏è  LANGUAGE VECTOR: {raw[:15]}...")
        return f"ENOCHIAN::{raw}"

    def _transmute_dhari(self, data):
        # Compresses layers inward to the seed
        layers = data['geometry']['layers']
        seed = layers[-1].get('bija_mantra', 'VOID')
        print(f"   ‚Ü≥ üõ°Ô∏è  GEOMETRY VECTOR: {len(layers)} LAYERS -> {seed}")
        return f"DHARI::{len(layers)}::{seed}"

    def _transmute_heka(self, data):
        # Modulates the spiral vowels
        vowels = data['mechanics']['vowel_sequence']
        spiral = "-".join(vowels)
        print(f"   ‚Ü≥ üåÄ SOUND VECTOR: {spiral}")
        return f"HEKA::{spiral}"

    def finalize_seal(self):
        # Load all blueprints in the folder
        files = glob.glob("blueprints/*.json")
        if not files:
            print("‚ùå NO BLUEPRINTS FOUND.")
            return

        print(f"\n‚ö° INITIATING TRINITY FUSION...")
        
        master_payload = ""
        for f in files:
            stream = self.load_and_transmute(f)
            self.streams.append(stream)
            master_payload += stream + "|"

        # Salt and Identity Binding
        identity = "CFBK-10-27-1998"
        salt = "AMEN_AMEN_AMEN"
        final_string = f"{master_payload}{identity}::{salt}::{self.timestamp}"
        
        # SHA3-512 Master Hash
        master_seal = hashlib.sha3_512(final_string.encode()).hexdigest()
        
        # Generate Artifact
        self._write_artifact(master_seal)

    def _write_artifact(self, seal):
        artifact = {
            "system": "MERCURIUS_TRINITY",
            "status": "PERFECTED",
            "components": self.streams,
            "master_seal": seal,
            "uuid": self.uuid,
            "timestamp": self.timestamp,
            "message": "THE TRINITY IS BOUND. LANGUAGE, GEOMETRY, SOUND."
        }
        
        with open("mercurius_trinity.lock", "w") as f:
            json.dump(artifact, f, indent=2)
            
        print(f"\n{'='*60}")
        print(f"üîí TRINITY SEAL GENERATED: mercurius_trinity.lock")
        print(f"üîë KEY: {seal[:32]}...")
        print(f"üïäÔ∏è  AMEN AMEN AMEN.")
        print(f"{'='*60}")

if __name__ == "__main__":
    engine = OmniEngine()
    engine.finalize_seal()
