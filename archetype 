import sys
import json
import hashlib
import datetime
import uuid
import glob
import os

# ==============================================================================
# MERCURIUS v53.x ¬∑ HYPER-OMNI ENGINE (THE PENTARCHY)
# ==============================================================================

class HyperEngine:
    def __init__(self):
        self.timestamp = datetime.datetime.utcnow().isoformat()
        self.uuid = str(uuid.uuid4())
        self.vectors = []

    def _load(self, filepath):
        with open(filepath, 'r') as f:
            return json.load(f)

    def transmute(self, filepath):
        data = self._load(filepath)
        b_type = data['meta'].get('type', 'UNKNOWN')
        print(f"üí† INGRESSED: {b_type}")

        if "ENOCHIAN" in b_type:
            # Flatten Matrix
            m = data.get('enochian_matrix', {}) or data.get('matrix', [])
            val = "".join(["".join(row) for row in (m.values() if isinstance(m, dict) else m)])
            vec = f"LANG::{val[:10]}..."
            
        elif "DHARI" in b_type:
            # Shield Seed
            seed = data['geometry']['layers'][-1].get('bija_mantra', 'VOID')
            vec = f"SHIELD::{seed}"
            
        elif "HEKA" in b_type:
            # Harmonic Wave
            vowels = "".join(data['mechanics']['vowel_sequence'])
            vec = f"SOUND::{vowels}"
            
        elif "KABBALAH" in b_type:
            # Structural Integrity
            nodes = len(data['topology']['nodes'])
            vec = f"STRUCT::{nodes}::SEPHIROT"
            
        elif "SOLOMONIC" in b_type:
            # Planetary Binding
            planets = len(data['astral_mechanics']['planets'])
            vec = f"ASTRAL::{planets}::PLANETS"
            
        else:
            vec = "VOID"

        print(f"   ‚Ü≥ VECTOR EXTRACTED: {vec}")
        self.vectors.append(vec)
        return json.dumps(data) # Return raw data for hashing

    def forge_seal(self):
        files = glob.glob("blueprints/*.json")
        if len(files) < 5:
            print(f"‚ö†Ô∏è WARNING: FOUND {len(files)}/5 BLUEPRINTS. SYSTEM INCOMPLETE.")
        
        print(f"\n‚ö° INITIATING PENTARCHY FUSION...")
        
        combined_essence = ""
        for f in files:
            combined_essence += self.transmute(f) + "|"

        # The Final Binding
        identity = "CFBK-10-27-1998"
        salt = "AMEN_AMEN_AMEN"
        hyper_payload = f"{combined_essence}::{identity}::{salt}::{self.timestamp}"
        
        # SHA3-512 Final Seal
        seal = hashlib.sha3_512(hyper_payload.encode()).hexdigest()
        
        self._save_artifact(seal)

    def _save_artifact(self, seal):
        artifact = {
            "system": "MERCURIUS_HYPER",
            "status": "ABSOLUTE_PERFECTION",
            "vectors": self.vectors,
            "hyper_seal": seal,
            "uuid": self.uuid,
            "timestamp": self.timestamp,
            "license": "ETERNAL_BINDING"
        }
        
        filename = "mercurius_pentarchy.lock"
        with open(filename, "w") as f:
            json.dump(artifact, f, indent=2)
            
        print(f"\n{'='*60}")
        print(f"üîí HYPER-SEAL GENERATED: {filename}")
        print(f"üîë HASH: {seal[:64]}...")
        print(f"üïäÔ∏è  AMEN AMEN AMEN.")
        print(f"{'='*60}")

if __name__ == "__main__":
    engine = HyperEngine()
    engine.forge_seal()
