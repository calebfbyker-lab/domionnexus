ğŸ§  codex/neural/cortex.py

import math, random, time, json
def activate(inputs:list[float]):
    t=time.time()
    weight=sum(math.sin(i*t/10) for i in inputs)/len(inputs)
    coherence=math.tanh(weight)
    return {"activation":round(weight,6),"coherence":round(coherence,6),"ts":t}

âš¡ codex/neural/synapse.py

import random, math
def adjust(weight:float, feedback:float):
    delta=(feedback-weight)*random.uniform(0.01,0.1)
    new_weight=weight+delta
    return {"old":weight,"feedback":feedback,"new":new_weight,"plasticity":math.tanh(abs(delta)*10)}

ğŸ‘ codex/neural/sensory.py

import random, time
def perceive(data:str):
    entropy=sum(ord(c)%10 for c in data)/len(data)
    intensity=random.random()*entropy
    return {"input":data,"entropy":entropy,"intensity":intensity,"ts":time.time()}

â¤ï¸ codex/neural/limbic.py

import math, random
def emotion(valence:float, arousal:float):
    mood=math.sin(valence*math.pi)+math.cos(arousal*math.pi/2)
    tone="serene" if mood>0.5 else "turbulent" if mood<-0.5 else "neutral"
    return {"mood":tone,"valence":valence,"arousal":arousal,"score":mood}

ğŸŒŒ codex/neural/dream.py

import random, hashlib
def dream(seed:str="codex"):
    imagery="".join(random.choice("â—¼ï¸â—»ï¸â–ªï¸â–«ï¸ğŸ”¶ï¸ğŸ”·ï¸ğŸ”¸ï¸ğŸ”¹ï¸") for _ in range(8))
    sig=hashlib.sha256((seed+imagery).encode()).hexdigest()[:12]
    return {"seed":seed,"vision":imagery,"signature":sig}


