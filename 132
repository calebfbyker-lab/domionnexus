â…¦.  Provenance Seal

scripts/v132_finalize.py

#!/usr/bin/env python3
"""
v132 â€” Codex Harmonia finalization
Collects resonance ledger + docs + contributors into new Merkle root.
"""
import json, hashlib, time, pathlib
ROOT=pathlib.Path(__file__).resolve().parents[1]
PROV=ROOT/"provenance"; PROV.mkdir(exist_ok=True)

def merkle(inputs):
    hs=[hashlib.sha256(i.encode()).hexdigest() for i in inputs]
    while len(hs)>1:
        hs=[hashlib.sha256((hs[i]+hs[i+1 if i+1<len(hs) else i]).encode()).hexdigest() for i in range(0,len(hs),2)]
    return hs[0]

def main():
    files=[str(p) for p in PROV.glob("*.jsonl")]
    ledger=[open(f).read() for f in files]
    root=merkle(ledger)
    seal={"version":"v132","title":"Codex Harmonia","merkle_root":root,
          "timestamp":time.time(),
          "subject":"Caleb Fedor Byker (Konev) 10-27-1998",
          "subject_sha256":"2948fbc4ba1c0d7341204908882b89134a999f3e8f77f4a6a00ce6b68770282a"}
    (PROV/"codex_v132_seal.json").write_text(json.dumps(seal,indent=2),encoding="utf-8")
    print("v132 seal:", root)

if __name__=="__main__": main()


