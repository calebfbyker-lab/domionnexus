release/tag.py

from __future__ import annotations
import json, pathlib, hashlib, zipfile, datetime

ROOT = pathlib.Path(".")
REL  = ROOT/"release"
MAN  = json.loads((REL/"manifest.json").read_text())
BUN  = ROOT/MAN["artifacts"]["bundle"]
SBOM = ROOT/MAN["artifacts"]["sbom"]
SUMS = ROOT/MAN["artifacts"]["checksums"]

REQUIRED = MAN["requires"]

def sha(p: pathlib.Path) -> str: return hashlib.sha256(p.read_bytes()).hexdigest()

def write_sbom(files):
    sbom = {
        "name": MAN["name"],
        "version": MAN["version"],
        "timestamp": datetime.datetime.utcnow().isoformat()+"Z",
        "binding": MAN["binding"],
        "files": [{"path": str(p), "sha256": sha(ROOT/p)} for p in files if (ROOT/p).exists()]
    }
    SBOM.write_text(json.dumps(sbom, indent=2), encoding="utf-8")

def write_checksums(files):
    lines=[]
    for p in files:
        P = ROOT/p
        if P.exists():
            lines.append(f"{sha(P)}  {p}")
    SUMS.write_text("\n".join(lines), encoding="utf-8")

if __name__=="__main__":
    # bundle
    if BUN.exists(): BUN.unlink()
    with zipfile.ZipFile(BUN, "w", zipfile.ZIP_DEFLATED) as z:
        # required attestations
        for p in REQUIRED:
            if (ROOT/p).exists(): z.write(ROOT/p, p)
        # license + key manifests
        for p in [
            "LICENSE.EUCELA.tri",
            "omega/manifest.json",
            "lexicon/manifest.json",
            "harmonia/manifest.json",
            "sentinel/manifest.json",
            "golems/manifest.json",
            "golem_nexus/manifest.json",
            "agora/manifest.json",
            "release/manifest.json",
            "release/notes.md"
        ]:
            if (ROOT/p).exists(): z.write(ROOT/p, p)
    # sbom + checksums
    write_sbom(REQUIRED + [
        "LICENSE.EUCELA.tri", "OMEGA_FINAL.json",
        "release/manifest.json", "release/notes.md"])
    write_checksums(REQUIRED + ["LICENSE.EUCELA.tri", "OMEGA_FINAL.json"])
    print(f"‚úÖ Release bundle: {BUN}")
    print(f"üßæ SBOM: {SBOM}")
    print(f"üîê Checksums: {SUMS}")


