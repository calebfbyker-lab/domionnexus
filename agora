4 ¬∑ Core API (Flask, minimal & safe)

agora/api/app.py

from __future__ import annotations
from flask import Flask, jsonify, send_from_directory
import pathlib, json, hashlib, datetime

ROOT = pathlib.Path(".")
CODICES = ["OMEGA_FINAL.json","SENTINEL_ATTEST.json","GOLEMS_ATTEST.json","GOLEM_NEXUS_ATTEST.json"]

app = Flask(__name__, static_folder="../ui", static_url_path="/ui")

def sha(p: pathlib.Path)->str:
    return hashlib.sha256(p.read_bytes()).hexdigest()

@app.get("/api/status")
def status():
    data=[]
    for name in CODICES:
        p=ROOT/name
        if not p.exists(): continue
        js=json.loads(p.read_text())
        data.append({
            "name": name,
            "timestamp": js.get("timestamp"),
            "sha256": sha(p),
            "size": p.stat().st_size
        })
    return jsonify({"updated": datetime.datetime.utcnow().isoformat()+"Z","codices":data})

@app.get("/api/ledger")
def ledger():
    ledger = []
    for p in ROOT.glob("chain/golem_*.jsonl"):
        ledger.append({"file": p.name, "lines": len(p.read_text().splitlines())})
    return jsonify({"ledgers":ledger})

@app.get("/")
def home():
    return send_from_directory("../ui","index.html")

if __name__=="__main__":
    app.run(host="0.0.0.0",port=8080,debug=False)


