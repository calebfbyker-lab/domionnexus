#!/usr/bin/env bash
set -euo pipefail
source .env

# Start Codex mesh/fractal node operator
echo "[+] Starting Codex Mesh Crown Node"
node crown_unified_server.js &

SRV_PID=$!
echo "[+] Server PID: $SRV_PID"

# Start payment watcher ‚Äì sovereign mesh economic node
echo "[+] Starting payment watcher"
node payment_watcher.js --mode=rpc --address="${CFBK_BTC_ADDR}" --interval=30 &

W_PID=$!
echo "[+] Watcher PID: $W_PID"

# 15-min automon autopilot loop (Codex/autonomon)
while true; do
  curl -s -X POST http://127.0.0.1:4747/autopilot/run \
    -H 'Content-Type: application/json' \
    -d "{"ambient_c":18,"power_cost_usd_per_kwh":${POWER_COST_USD_PER_KWH:-0.12}}" >/dev/null 2>&1 || true
  sleep 900
done
