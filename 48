---

1) Adamic encoder (hash+base36+date-weights)

codex/v48/adamic/encoder.py

from __future__ import annotations
import hashlib, string
from typing import Dict

ALPH = string.digits + string.ascii_lowercase

def _b36(n:int)->str:
    if n==0: return "0"
    s=""; x=abs(n)
    while x: x, r = divmod(x, 36); s = ALPH[r] + s
    return s

def sha256_hex(b:bytes)->str: return hashlib.sha256(b).hexdigest()

def adamic_digest(text:str, *, y:int=1998, m:int=10, d:int=27)->Dict[str,str]:
    """
    Adamic digest = SHA256(text) ⊕ lineage-weights
    Lineage constants from 10·27·1998 and 10×27×98=26460
    """
    raw = text.encode("utf-8")
    h   = sha256_hex(raw)
    s   = f"{m}.{d}.{y}"
    prod= 10*27*98   # 26460
    w   = f"{m+d+y}-{prod}"
    mix = sha256_hex((h + s + w).encode())
    as_int = int(mix[:32], 16)
    b36 = _b36(as_int)
    return {
        "sha256": h,
        "lineage": s,
        "product_10x27x98": str(prod),
        "mix": mix,
        "adamic36": b36
    }


