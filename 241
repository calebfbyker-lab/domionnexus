‚öôÔ∏è scrolls/build_scrolls.py

#!/usr/bin/env python3
import hashlib, json, datetime, pathlib

root = pathlib.Path(__file__).parent

def sha256_file(p):
    h = hashlib.sha256()
    with open(p, 'rb') as f:
        for chunk in iter(lambda: f.read(65536), b''):
            h.update(chunk)
    return h.hexdigest()

entries = []
manifest = {}

for p in sorted(root.iterdir()):
    if p.is_file() and p.suffix in ('.md', '.json') and p.name not in ('codex.json', 'lineage.manifest.json'):
        digest = sha256_file(p)
        manifest[p.name] = {'sha256': digest, 'size': p.stat().st_size}
        entries.append({'file': p.name, 'sha256': digest,
                        'modified': datetime.datetime.utcfromtimestamp(p.stat().st_mtime).isoformat()+'Z'})

codex = {'version': 'v241.x', 'generated': datetime.datetime.utcnow().isoformat()+'Z', 'scrolls': entries}
(root/'codex.json').write_text(json.dumps(codex, indent=2), encoding='utf-8')
(root/'lineage.manifest.json').write_text(json.dumps(manifest, indent=2), encoding='utf-8')

# Generate HTML index
html = ["<html><head><meta charset='utf-8'><title>Codex Scrolls Index</title>",
        "<style>body{font-family:system-ui;padding:24px;max-width:900px;margin:auto}"
        "code{background:#111;color:#c8ffc8;padding:2px 6px;border-radius:6px}</style>",
        "</head><body><h1>Codex Scrolls Index ‚Äî v241.x</h1><ul>"]
for e in entries:
    html.append(f"<li>{e['file']} ‚Äî <code>{e['sha256'][:16]}‚Ä¶</code></li>")
html.append("</ul></body></html>")
(root.parent/'scrolls_index.html').write_text('\n'.join(html), encoding='utf-8')
print("Built scrolls index and catalog.")


---

üåê scrolls_index.html

This file is generated automatically, but here‚Äôs its structure:

<html>
<head>
