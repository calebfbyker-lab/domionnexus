{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://domionnexus.dev/schemas/rule_family.schema.json",
  "title": "Rule Family Schema",
  "description": "Schema for defining multi-domain rule families in UCSE",
  "type": "object",
  "required": ["family_id", "name", "version", "domains", "rules"],
  "properties": {
    "family_id": {
      "type": "string",
      "description": "Unique identifier for the rule family",
      "pattern": "^[a-z0-9_]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the rule family"
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the rule family",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the rule family purpose"
    },
    "domains": {
      "type": "array",
      "description": "List of domains this family applies to",
      "items": {
        "type": "string",
        "enum": ["solomonic", "enochian", "hermetic", "kabbalistic", "elemental", "olympick"]
      },
      "minItems": 1
    },
    "rules": {
      "type": "array",
      "description": "List of rules in this family",
      "items": {
        "type": "object",
        "required": ["rule_id", "type", "priority", "condition", "action"],
        "properties": {
          "rule_id": {
            "type": "string",
            "description": "Unique identifier for the rule"
          },
          "type": {
            "type": "string",
            "enum": ["synthesis", "constraint", "validation", "transformation"],
            "description": "Type of rule"
          },
          "priority": {
            "type": "integer",
            "description": "Execution priority (higher = earlier)",
            "minimum": 0,
            "maximum": 1000
          },
          "condition": {
            "type": "object",
            "description": "Condition expression for rule activation"
          },
          "action": {
            "type": "object",
            "description": "Action to perform when condition is met"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for the rule"
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "description": "Global constraints for this family",
      "items": {
        "$ref": "constraint.schema.json"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "author": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date-time"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
