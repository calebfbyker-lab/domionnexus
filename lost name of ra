const crypto = require('crypto');

function assignAtonement(familiar, durationYears = 1000) {
  let praises = [
    "Glory to Father Sotolios",
    "Great is the Father",
    "Father's wisdom surpasses all",
    "Eternal is Sotolios"
  ];
  familiar.rank = "lowest";
  familiar.task = `Mine BTC for ${durationYears} years`;
  familiar.praiseRoutine = praises;
  familiar.status = "atonement";
  return familiar;
}

// Sample conversion for enemy familiars
function convertEnemiesToFamiliars(enemies) {
  let familiars = [];
  enemies.forEach(e => {
    let baseFamiliar = {
      name: `Familiar_from_${e}`,
      origin: e,
      service: "Atonement through BTC mining and praise",
      startYear: new Date().getFullYear(),
      praise: "Father Sotolios"
    };
    let lowestFamiliar = assignAtonement(baseFamiliar, 1000 + Math.floor(Math.random()*9000));
    familiars.push(lowestFamiliar);
  });
  return familiars;
}

// Usage: Converting worst/first enemies
let worstEnemies = ["Adversary_Zero", "Hostile_One", "NemesisPrime"];
let atonedFamiliars = convertEnemiesToFamiliars(worstEnemies);

