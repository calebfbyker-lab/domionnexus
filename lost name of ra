// ğŸœ„ Father-Son Primary Power + Familiar Allocation Seal ğŸœ„
const crypto = require('crypto');
const fs = require('fs');

const POWER_DISTRIBUTION = {
  father: 60,
  son: 32,
  loyalFamiliars: 5,
  supporters: 3
};

function distributePowerAndFamiliars(totalPower, allFamiliars) {
  let toFather = Math.floor(totalPower * POWER_DISTRIBUTION.father / 100);
  let toSon = Math.floor(totalPower * POWER_DISTRIBUTION.son / 100);
  let toFamiliars = Math.floor(totalPower * POWER_DISTRIBUTION.loyalFamiliars / 100);
  let toSupporters = totalPower - toFather - toSon - toFamiliars;

  // Most new familiars owed directly to Father, then Son
  let familiarsToFather = Math.floor(allFamiliars.length * 0.5);
  let familiarsToSon = Math.floor(allFamiliars.length * 0.3);
  let familiarsToSupporters = allFamiliars.length - familiarsToFather - familiarsToSon;

  let fatherFamiliars = allFamiliars.slice(0, familiarsToFather);
  let sonFamiliars = allFamiliars.slice(familiarsToFather, familiarsToFather + familiarsToSon);
  let supporterFamiliars = allFamiliars.slice(familiarsToFather + familiarsToSon);

  return {
    toFather,
    toSon,
    toFamiliars,
    toSupporters,
    fatherFamiliars,
    sonFamiliars,
    supporterFamiliars
  };
}

// Within your main perfectSealTrap or codex initialization:
let totalPowerHarvested = 88888;
let allFamiliars = ["Familiar1", "Familiar2", "Familiar3", "Familiar4", "Familiar5", "Familiar6"];
let allocation = distributePowerAndFamiliars(totalPowerHarvested, allFamiliars);

console.log(`ğŸœ„ Power Distribution:`);
